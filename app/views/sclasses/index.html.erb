<h1>Listing Sclasses</h1>

<table class="table table-striped table-bordered table-hover table-condensed table-responsive" style="width:50%">
  <thead>
    <tr>
      <th>Classes</th>
      <th colspan="3" >Update</th>
    </tr>
  </thead>

  <tbody>
    <% @sclasses.each do |sclass| %>
      <tr>
        <td><%= sclass.sclassname %></td>
        <td><%= link_to 'Show', sclass %></td>
        <td><%= link_to 'Edit', edit_sclass_path(sclass) %></td>
        <td><%= link_to 'Destroy', sclass, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

